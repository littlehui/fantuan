<zk>
    <window title="消费页面" id="consumeWin"
            apply="com.littlehui.fantuan.controller.consume.ConsumeEditorController">
        <panel>
            <panelchildren>
                <vlayout>
                    <label id="consumeName"></label>
                    <label value="消费金额：" ></label>
                    <decimalbox id="consumePrice" value="@load(consumeWin.consume.consumePrice)" constraint="no negative:只能为数字，不能为负"></decimalbox>
                    <label value="消费详情："></label>
                    <textbox  multiline="true" id="consumeDetail" height="100px"></textbox>
                    <button id="consumeSubmitButton" label="确定"></button>
                </vlayout>
            </panelchildren>
        </panel>
    </window>
</zk>